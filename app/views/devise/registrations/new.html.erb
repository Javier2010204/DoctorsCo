<div class="container white shadow">
    <h1>Registro</h1>
    <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <%= devise_error_messages! %>
    <div class="form-group">
      <%= form.email_field :email, class: "form-control", placeholder: "Email"%>
    </div>
    <div class="form-group">
      <%= form.password_field :password, class: "form-control", placeholder: "Contraseña"%>
    </div>
    <div class="form-group">
      <%= form.password_field :password_confirmation, class: "form-control", placeholder: "Contraseña"%>
    </div>
    <div class="form-group text-center">
      <%= form.submit "Registrarme", class: "btn btn-primary"%>
      <%= render "devise/shared/links"%>
    </div>
    <% end %>
</div>


