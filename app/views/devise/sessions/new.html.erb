<div class="container white shadow">
		<h1>Iniciar Sesion</h1>
		<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
		<%= devise_error_messages! %>
		<div class="form-group">
			<%= form.email_field :email, class: "form-control", placeholder: "Email"%>
		</div>
		<div class="form-group">
			<%= form.password_field :password, class: "form-control", placeholder: "ContraseÃ±a"%>
		</div>
		<div class="form-group">
			<% if devise_mapping.rememberable? %>
				<div class="checkbox checkbox-info">
					<label for='recuerdame'>Recuerdame
						<%= form.check_box :remeber_me, :checked => true, id: 'recuerdame', class: 'checkbox' %>
					</label>
				</div>
			<% end %>
		</div>		
		<div class="form-group text-center">
			<%= form.submit "Iniciar Sesion", class: "btn btn-primary"%>
			<%= render "devise/shared/links"%>
		</div>
		<% end %>
</div>

